<body>
    {{!-- {{Start of header and nav}} --}}
    <header>

        <nav class="navbar navbar-expand-md navcolor navbar-light">
<a class="navbar-brand" href="index.html"><strong>Project Name</strong></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item px-2">
                        <a href="#" style="font-size:14px" class="nav-link" href="#">Logout</a>
                    </li>
                </ul>

            </div>
        </nav>

    </header>

    <section>

        <div class="container-fluid">
            <br>
            <br>
            <br>
            <br>

            <div class="row">
                <div class="col-1">

                </div>
                <div class="col-3">
                    <img src="{{club.dataValues.Club.dataValues.picture_url}}"
                        alt="Book Cover" class="img-fluid" style="width: 100%; border-radius: 20px 20px 0px 0px;">

                </div>
                <div class="col-7">
                    <h2 style="font-family: 'Abril Fatface', cursive;">{{club.dataValues.Club.dataValues.book_title}}</h2>
                    <p class="mt-2" id="author">
                        Author: {{club.dataValues.Club.dataValues.book_author}}
                    </p>
                    <p class="mt-2" id="description">
                        Maybe a description
                    </p>
                </div>
                <div class="col-1">

                </div>

            </div>

        </div>

        </section>
        {{!-- {{adds the drop shadow to the portfolio section}} --}}
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <br> <br> <br>
                <h3 style=" font-family: 'Abril Fatface', cursive;">Join the discussion</h3>



                <p>I'm baby kinfolk cold-pressed glossier narwhal kale chips letterpress
                    health
                    goth drinking</p>
                <br>
                {{!-- {{menu nav}} --}}
                <ul class="nav nav-tabs nav-justified md-tabs indigo mt-4" id="myTabJust" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab-just" data-toggle="tab" href="#home-just" role="tab"
                            aria-controls="home-just" aria-selected="true">Sort by page number</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab-just" data-toggle="tab" href="#profile-just" role="tab"
                            aria-controls="profile-just" aria-selected="false">View all</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="contact-tab-just" data-toggle="tab" href="#contact-just" role="tab"
                            aria-controls="contact-just" aria-selected="false">Create discussion</a>
                    </li>
                </ul>

            </div>
        </div>

        <main class="shadow b-col">
            <div class="container">

                {{!-- {{First Tab}} --}}

                <div class="tab-content b-col card" id="myTabContentJust">
                    <br><br>
                    <div class="tab-pane fade show active" id="home-just" role="tabpanel"
                        aria-labelledby="home-tab-just">
                        <div class="card shadow border border-top mb-2 mt-2" style=" border-radius: 20px; width: 100%;">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-6">
                                        <form>
                                            <div class="input-group  mb-3">
                                                <input type="number" min="0" max="{{club.dataValues.Club.dataValues.pg_count}}" value="{{club.dataValues.current_pg}}" class="form-control"
                                                    id="current_pg" placeholder="Current page number">
                                                <div class="input-group-append">
                                                    <span class="input-group-text"
                                                        style="border-radius: 0% 1rem 1rem 0%;">/<span id="totalPgCount">{{club.dataValues.Club.dataValues.pg_count}}</span>
                                                    </span>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="col-6">
                                        <button type="submit" id="pgBtn" class="btn btn-secondary mb-2"
                                            style="margin: auto; width: 100%; border-radius: 1rem 1rem 1rem 1rem;">Update</button>


                                    </div>


                                </div>
                                <div class="row">

                                    <figure id="progressBar">
                                        <div id="progress"></div>

                                    </figure>

                                </div>
                            </div>
                        </div>


                        {{#each lessthanthread}}
                        <div class="card shadow border border-white mb-2 mt-2"
                            style=" border-radius: 20px; width: 100%;">
                            <div class="card-body">
                                <h5 class="card-title">{{dataValues.topic}}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">{{User.dataValues.first_name}} {{User.dataValues.last_name}}</h6>
                                <a href="#" class="btn btn-primary">Join Discussion</a>
                                <span class="page-number">{{dataValues.pg_num}}</span>
                            </div>
                        </div>
                        {{/each}}

                    </div>

                    {{!-- {{Second Tab}} --}}
                    <div class="tab-pane fade" id="profile-just" role="tabpanel" aria-labelledby="profile-tab-just">

                        {{#each thread}}
                        <div class="card shadow border border-white mb-2 mt-2"
                            style=" border-radius: 20px; width: 100%;">
                            <div class="card-body">
                                <h5 class="card-title">{{dataValues.topic}}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">{{User.dataValues.first_name}} {{User.dataValues.last_name}}</h6>
                                <a href="#" class="btn btn-primary">Join Discussion</a>
                                <span class="page-number">{{dataValues.pg_num}}</span>
                            </div>
                        </div>
                        {{/each}}


                    </div>
                    {{!-- {{Third Tab}} --}}
                    <div class="tab-pane fade" id="contact-just" role="tabpanel" aria-labelledby="contact-tab-just">
                        <div class="card shadow border border-top mb-2 mt-2" style=" border-radius: 20px; width: 100%;">
                            <div class="card-body">
                                <form id="threadTopic" data-club_id="1">
                                    <div class="form-group">
                                        <label for="topic">Discussion Question</label>
                                        <input type="text" class="form-control" id="topic">
                                    </div>

                                    <div class="form-group">
                                        <label for="pg_num">Page Reference</label>
                                        <input type="number" class="form-control" id="pg_num"
                                            placeholder="max: {{club.dataValues.Club.dataValues.pg_count}}">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>

                <br></br>
            </div>
        </main>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript" src="/js/js.js"></script>
    <script type="text/javascript" src="/js/club.js"></script>

</body>